<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/backText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_arrow" />
    </LinearLayout>

    <Button
        android:id="@+id/editEventBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_event"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/viewQRCodeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_qr_code"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/runLotteryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run_lottery"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/viewEntrantsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_entrants"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/viewMapBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_map"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/sendNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_notification"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/deleteEventBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_event"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp" />

</LinearLayout>