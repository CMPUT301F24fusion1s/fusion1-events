<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Admin Label -->

    <!-- Container for Buttons -->
    <TextView
        android:id="@+id/tv_admin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Admin"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_label"
        app:layout_constraintVertical_bias="0.315">

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_view_event"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#000000"
            android:fontFamily="sans-serif"
            android:text="View Event"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/btn_view_profiles"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#000000"
            android:fontFamily="sans-serif"
            android:text="View Profiles"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/btn_view_facilities"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#000000"
            android:fontFamily="sans-serif"
            android:text="View Facilities"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@android:color/black" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

